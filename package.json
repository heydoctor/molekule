{
  "name": "refractal",
  "description": "React component library built on top of styled-components and styled-system",
  "version": "0.12.1",
  "main": "lib/refractal.js",
  "module": "lib/refractal.es.js",
  "files": [
    "lib"
  ],
  "keywords": [
    "react",
    "styled",
    "ui-framework"
  ],
  "sideEffects": false,
  "license": "MIT",
  "scripts": {
    "clean": "rimraf lib",
    "watch": "yarn rollup --watch",
    "build": "npm-run-all clean rollup",
    "docs": "yarn docz dev",
    "docs:build": "rimraf dist && yarn docz build",
    "docs:deploy": "npm run docs:build && gh-pages -d dist",
    "prepublishOnly": "npm-run-all build",
    "rollup": "rollup -c",
    "test": "jest",
    "lint": "eslint src",
    "release": "standard-version && git push --follow-tags"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "styled-system": "^3.1.3"
  },
  "peerDependencies": {
    "polished": "^2.0.0",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-animations": "^1.0.0",
    "styled-components": "^3.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-jest": "^23.6.0",
    "docz": "^0.11.2",
    "docz-theme-default": "^0.11.2",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "enzyme-to-json": "^3.3.1",
    "eslint-config-sappira": "^1.6.5",
    "gh-pages": "^1.1.0",
    "jest": "^23.6.0",
    "jest-styled-components": "^6.2.0",
    "npm-run-all": "^4.1.2",
    "polished": "^2.0.3",
    "prop-types": "^15.6.1",
    "react": "^16.5.1",
    "react-animations": "^1.0.0",
    "react-dom": "^16.5.1",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.5.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.65.2",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-filesize": "^4.0.1",
    "rollup-plugin-node-resolve": "^3.4.0",
    "standard-version": "^4.4.0",
    "styled-components": "^3.4.6"
  }
}
